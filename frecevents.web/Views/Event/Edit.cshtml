@model frecevents.web.Models.EventInfoModel

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div class="header-parall" data-stellar-background-ratio="0.8">
</div>
<div style="display: block; height: 60px;"></div>

<div class="bg-secondary2 bg-pl">
    <div class="container cont-1">
        <div class="row">
            @using (Html.BeginForm())
            {
                <div class="grid_12 bg-secondary1 form-horizontal">
                    <h4>Event Information</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @if (String.IsNullOrWhiteSpace(Model.ID))
                    {
                        <div class="form-group">
                            @Html.LabelFor(model => model.ID, htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBoxFor(model => model.ID, htmlAttributes: new { style = "width: 100px;" })
                                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    }
                    else
                    {
                        @Html.HiddenFor(model => model.ID)
                    }

                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.Title, htmlAttributes: new { style="width: 300px;"})
                            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.StartDateTime, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.StartDateTime, htmlAttributes: new { style="width: 200px;"})
                            @Html.ValidationMessageFor(model => model.StartDateTime, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EndDateTime, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.EndDateTime, htmlAttributes: new { style="width: 200px;"})
                            @Html.ValidationMessageFor(model => model.EndDateTime, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EventType, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.EventType, htmlAttributes: new { style = "width: 100px;" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EventSite, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.EventSite, htmlAttributes: new { style = "width: 300px;" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SiteURL, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.SiteURL, htmlAttributes: new { style = "width: 300px;" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.SiteAddress, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.SiteAddress, htmlAttributes: new { style = "width: 300px;" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.MapUrl, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextBoxFor(model => model.MapUrl, htmlAttributes: new { style = "width: 300px;" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.TextAreaFor(model => model.Description, htmlAttributes: new { style = "width: 300px; height: 200px;" })
                        </div>
                        <div style="font-size: smaller">
                            Use standard <a href="https://en.wikipedia.org/wiki/Markdown#Example" target="_blank">Markdown syntax</a>
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Notes, new { htmlAttributes = new { @class = "form-control" } })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div>
    @Html.ActionLink("Back to List", "Index")
</div>
